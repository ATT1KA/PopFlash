# Auth Service Environment Configuration
# Copy to .env and configure

AUTH_SERVICE_PORT=4100

# Database
POPFLASH_MONGO_URI=mongodb://localhost:27017/popflash

# JWT Configuration (secrets must be minimum 32 characters)
POPFLASH_JWT_SECRET=your-jwt-secret-minimum-32-characters-here
POPFLASH_JWT_REFRESH_SECRET=your-refresh-secret-minimum-32-chars
POPFLASH_JWT_EXPIRATION_MINUTES=15
POPFLASH_JWT_REFRESH_EXPIRATION_DAYS=30

# Steam API
POPFLASH_STEAM_API_KEY=your-steam-web-api-key
POPFLASH_STEAM_APP_ID=730
POPFLASH_STEAM_APP_NAME=PopFlash

# Defaults
POPFLASH_DEFAULT_COUNTRY_CODE=US

# Persona KYC (optional - enable for KYC verification)
POPFLASH_PERSONA_API_KEY=persona_sandbox_your_api_key
POPFLASH_PERSONA_TEMPLATE_ID=tmpl_your_template_id
POPFLASH_PERSONA_WEBHOOK_SECRET=your_webhook_secret
