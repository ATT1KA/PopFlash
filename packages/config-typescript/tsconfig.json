{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "baseUrl": "../../",
    "paths": {
      "@popflash/shared": ["packages/shared/src/index.ts"],
      "@popflash/shared/*": ["packages/shared/src/*"],
      "@popflash/ui": ["packages/ui/src/index.ts"],
      "@popflash/ui/*": ["packages/ui/src/*"],
      "@popflash/database": ["packages/database/src/index.ts"],
      "@popflash/database/*": ["packages/database/src/*"],
      "@popflash/config/*": ["packages/config/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "node_modules"]
}