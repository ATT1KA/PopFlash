# PopFlash Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# SHARED SECRETS (Required by multiple services)
# =============================================================================

# MongoDB connection string
POPFLASH_MONGO_URI=mongodb://localhost:27017/popflash

# JWT secrets (minimum 32 characters each)
POPFLASH_JWT_SECRET=your-jwt-secret-minimum-32-characters-here
POPFLASH_JWT_REFRESH_SECRET=your-refresh-secret-minimum-32-chars

# Steam API credentials
POPFLASH_STEAM_API_KEY=your-steam-web-api-key
POPFLASH_STEAM_APP_ID=730

# Payment & KYC providers
POPFLASH_STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
POPFLASH_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
POPFLASH_PERSONA_API_KEY=persona_sandbox_your_api_key
POPFLASH_PERSONA_TEMPLATE_ID=tmpl_your_template_id

# =============================================================================
# SERVICE PORTS
# =============================================================================

API_GATEWAY_PORT=4000
AUTH_SERVICE_PORT=4100
TRADING_SERVICE_PORT=4200
ESCROW_SERVICE_PORT=4300
INSIGHTS_SERVICE_PORT=4400
COMPLIANCE_SERVICE_PORT=4500
PAYMENTS_SERVICE_PORT=4600

# =============================================================================
# SERVICE URLs (for inter-service communication)
# =============================================================================

AUTH_SERVICE_URL=http://localhost:4100
TRADING_SERVICE_URL=http://localhost:4200
ESCROW_SERVICE_URL=http://localhost:4300
INSIGHTS_SERVICE_URL=http://localhost:4400
COMPLIANCE_SERVICE_URL=http://localhost:4500
PAYMENTS_SERVICE_URL=http://localhost:4600

# =============================================================================
# WEB APP
# =============================================================================

NEXT_PUBLIC_API_URL=http://localhost:4000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT expiration
POPFLASH_JWT_EXPIRATION_MINUTES=15
POPFLASH_JWT_REFRESH_EXPIRATION_DAYS=30

# Steam app name for display
POPFLASH_STEAM_APP_NAME=PopFlash

# Default country code for new users
POPFLASH_DEFAULT_COUNTRY_CODE=US

# Default currency
POPFLASH_DEFAULT_CURRENCY=USD

# Escrow disbursement account identifier
POPFLASH_ESCROW_DISBURSEMENT_ACCOUNT=popflash-operating

# Request timeouts (milliseconds)
API_GATEWAY_TIMEOUT_MS=10000
COMPLIANCE_SERVICE_TIMEOUT_MS=8000

# Compliance settings
COMPLIANCE_VERIFICATION_EXPIRY_HOURS=72
COMPLIANCE_RATE_LIMIT_PER_MINUTE=60

# Insights settings
INSIGHTS_GENERATION_LOOKBACK_DAYS=7
INSIGHTS_MAX_RECENT_TRADES=50
